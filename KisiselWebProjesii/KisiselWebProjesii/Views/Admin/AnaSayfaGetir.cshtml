@model KisiselWebProjesii.Models.Siniflar.AnaSayfa
@{
    ViewBag.Title = "Ana Sayfa Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Ana Sayfa Güncelle</h2>
<hr />

@using (Html.BeginForm("AnaSayfaGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })

    <br />
    @Html.LabelFor(x => x.isim)
    @Html.TextBoxFor(x => x.isim, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.profile)
    @Html.TextBoxFor(x => x.profile, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.description)
    @Html.TextAreaFor(x => x.description, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.job)
    @Html.TextBoxFor(x => x.job, new {@class = "form-control"})

    <br />

    @Html.LabelFor(x => x.communication)
    @Html.TextBoxFor(x => x.communication, new { @class = "form-control" })

    <br />

    <button class="btn btn-success">Ana Sayfa Güncelle</button>
}
